# DAM Configuration
# Copy this file to .env and customize

# Environment: development, staging, production
DAM_ENV=development

# Server settings
DAM_HOST=0.0.0.0
DAM_PORT=8888

# Security - CHANGE THIS IN PRODUCTION!
DAM_SECRET_KEY=your-secret-key-here-change-me

# Database
DAM_DATABASE_PATH=data/dam.db
DAM_DATABASE_TIMEOUT=30

# Content roots (can also be set via web UI)
DAM_PDF_ROOT=/path/to/your/pdf/library
DAM_3D_ROOT=/path/to/your/3d/models
DAM_SMB_PATHS=/mnt/nas/models,/mnt/nas/pdfs

# Directories
DAM_DATA_DIR=data
DAM_LOG_DIR=logs
DAM_THUMBNAIL_DIR=thumbnails

# Logging
DAM_LOG_LEVEL=INFO

# Indexer settings
DAM_INDEX_BATCH_SIZE=100
